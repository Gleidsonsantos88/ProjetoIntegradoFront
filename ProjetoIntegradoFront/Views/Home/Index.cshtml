<main class="container" style="max-width: 40%">
   
    @if(ViewData["Message"] != "" && ViewData["Message"] != null)
    {
        <div class="alert alert-danger"> @ViewData["Message"] </div>
    }
    <br />
    <form asp-controller="home" asp-action="login" method="post">
        <h1 class="h3 mb-3 fw-normal">Login</h1>

        <div class="form-floating">
            <label for="floatingInput">Email</label>
            <input name="email" type="email" class="form-control" id="email" placeholder="nome@exemplo.com">
        </div>
        <br />
        <div class="form-floating">
            <label for="floatingPassword">Senha</label>
            <input type="password" class="form-control" id="senha" name="senha" placeholder="Senha">
        </div>
        <br />
        <button class="w-100 btn btn-lg btn-primary" type="submit">Entrar</button>
    </form>
</main>
